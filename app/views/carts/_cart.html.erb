<table class="cart-table">
    <thead>
        <td>商品名稱</td>
        <td>數量</td>
        <td>單價</td>
        <td>小計</td>
        
    </thead>
    <tbody>
        
        <% current_cart.items.each do |item| %>
        <tr>
            <td><%= item.product.title %></td>
            <td><%= item.quantity %></td>
            <td><%= item.product.price %></td>
            <td><%= item.total_price %></td>
        </tr>
        <% end %>
        </tr>
        <td colspan="3">總價 ：</td>
        <td><%= current_cart.total_price %>元</td>
    </tbody>
</table>